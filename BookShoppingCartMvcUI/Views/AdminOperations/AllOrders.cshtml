@model IEnumerable<Order>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "All Orders";
}

<div class="container mt-5">
    <h4 class="text-center mb-4">Orders</h4>

    <!-- Check if there are orders -->
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>Address</th>
                    <th>Payment Status</th>
                    <th>Order Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                        <td>@order.Name</td>
                        <td>@order.Email</td>
                        <td>@order.MobileNumber</td>
                        <td>@order.Address</td>
                        <td>@order.PaymentMethod | @(order.IsPaid ? "Paid" : "Not Paid")</td>
                        <td>@order.OrderStatus.StatusName</td>
                        <td class="d-flex justify-content-center">
                            <!-- Order Detail Modal Button -->
                            <button type="button" data-bs-toggle="modal" data-bs-target="#modal-@order.Id" class="btn btn-info mx-1">
                                <i class="bi bi-info-circle"></i> Details
                            </button>

                            <!-- Change Order Status Button -->
                            <a asp-action="UpdateOrderStatus" asp-route-orderId="@order.Id" class="btn btn-warning mx-1">
                                <i class="bi bi-pencil-square"></i> Update Status
                            </a>

                            <!-- Toggle Payment Status Button -->
                            <a asp-action="TogglePaymentStatus" asp-route-orderId="@order.Id" class="btn btn-success mx-1">
                                <i class="bi bi-check-circle"></i> Toggle Payment
                            </a>

                            <!-- Order Detail Modal (Partial View) -->
                            @await Html.PartialAsync("/Views/AdminOperations/_OrderDetailModal.cshtml", new OrderDetailModalDTO { DivId = order.Id.ToString(), OrderDetail = order.OrderDetail })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h5 class="text-center">No orders available</h5>
    }
</div>

<!-- Custom Styles for Buttons and Table -->
<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .btn {
        font-size: 0.9rem;
        padding: 8px 12px;
        display: inline-flex;
        align-items: center;
    }

        .btn i {
            margin-right: 5px;
        }

    .btn-info, .btn-warning, .btn-success {
        padding: 8px 16px;
        font-size: 0.95rem;
    }

    .table th {
        background-color: #f8f9fa;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .modal-dialog {
        max-width: 800px;
    }

    .modal-content {
        border-radius: 8px;
    }
</style>
