@model IEnumerable<Product>
@{
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Products</h2>

    <!-- Add Product Button -->
    <div class="mb-3">
        <a asp-action="AddProduct" asp-controller="Product" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    <!-- Products Table -->
    @if (Model?.Any() == true)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Brand</th>
                    <th>Style</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @if (string.IsNullOrWhiteSpace(product.Image))
                            {
                                <img src="/Images/NoImage.png" class="img-thumbnail" style="width:80px;height:100px" alt="product image" />
                            }
                            else
                            {
                                <img src="/images/@product.Image" class="img-thumbnail" style="width:80px;height:100px" alt="product image" />
                            }
                        </td>
                        <td>@product.ProductName</td>
                        <td>@product.BrandName</td>
                        <td>@product.Style.StyleName</td>
                        <td>@product.Price</td>
                        <td>
                            <a asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-success btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger btn-sm" onclick="return window.confirm('Are you sure?')">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <h4>No Products Available</h4>
        </div>
    }
</div>

<!-- Custom Styles -->
<style>
    .container {
        max-width: 90%;
        margin: auto;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 6px 12px;
    }

    .btn-primary {
        font-size: 1rem;
    }

    .img-thumbnail {
        border-radius: 8px;
    }

    .alert-warning {
        background-color: #f9f9f9;
        color: #8a6d3b;
    }

    .mb-3 {
        margin-bottom: 1.5rem;
    }

    .text-center {
        text-align: center;
    }

    .bi {
        font-size: 1.2rem;
        margin-right: 5px;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }
</style>
