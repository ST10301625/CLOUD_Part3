@model IEnumerable<Style>
@{
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Styles</h2>

    <!-- Add More Button -->
    <div class="text-end mb-4">
        <a asp-action="AddStyle" asp-controller="Style" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Add More
        </a>
    </div>

    <!-- Styles Table -->
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Style</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var style in Model)
            {
                <tr>
                    <td>@style.StyleName</td>
                    <td>
                        <a asp-action="UpdateStyle" asp-controller="Style" asp-route-id="@style.Id" class="btn btn-outline-success me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="DeleteStyle" asp-controller="Style" asp-route-id="@style.Id" class="btn btn-outline-danger" onclick="return window.confirm('Are you sure you want to delete this style?')">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add some custom styles -->
<style>
    .table {
        border-radius: 8px;
        background-color: #fff;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }

    .btn-outline-success, .btn-outline-danger {
        transition: background-color 0.3s ease;
        padding: 8px 16px;
        font-size: 1rem;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    .thead-light th {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .text-end {
        text-align: right;
    }

    .bi {
        margin-right: 5px;
    }
</style>
