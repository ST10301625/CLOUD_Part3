@model StockDTO
@{
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Manage Stock</h2>

    <!-- Back Button -->
    <div class="d-flex justify-content-start mb-3">
        <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </div>

    <!-- Stock Management Form -->
    <form asp-action="ManangeStock" class="w-50 mx-auto">
        <input type="hidden" asp-for="ProductId" />

        <div class="mb-4">
            <label for="Quantity" class="form-label">Quantity</label>
            <input type="number" class="form-control" asp-for="Quantity" id="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-info btn-lg">Update Stock</button>
        </div>
    </form>
</div>

<!-- Custom Styles -->
<style>
    .container {
        max-width: 600px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }

    .btn-info {
        width: 100%;
        padding: 12px;
        font-size: 1.1rem;
        border-radius: 8px;
    }

    .d-flex {
        display: flex;
        align-items: center;
    }

    .justify-content-start {
        justify-content: flex-start;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .mb-4 {
        margin-bottom: 2rem;
    }

    .w-50 {
        width: 50%;
    }

    .mx-auto {
        margin-left: auto;
        margin-right: auto;
    }

    .text-center {
        text-align: center;
    }

    .text-danger {
        font-size: 0.875rem;
        padding-top: 5px;
    }
</style>
